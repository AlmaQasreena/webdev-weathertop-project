<form action="/dashboard/addstation" method="POST">
    <div class="row">
        <div class="form-group col-md-4">
            <label for="inputName" class="form-label">Name Wetterstation</label>
            <input placeholder="City" type="text" class="form-control" id="inputName" name="name">
        </div>
        <div class="form-group col-md-4">
            <label for="inputLatitude" class="form-label">Breitengrad</label>
            <input placeholder="00.000000" type="number" step="0.000001" min="-90" max="90" class="form-control" id="inputLatitude" name="latitude">
        </div>
        <div class="form-group col-md-4">
            <label for="inputLongitude" class="form-label">Längengrad</label>
            <input placeholder="00.000000" type="number" step="0.000001" min="-90" max="90" class="form-control" id="inputLongitude" name="longitude">
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Station Hinzufügen</button>
</form>

