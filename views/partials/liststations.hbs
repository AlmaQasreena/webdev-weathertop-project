<div class="row">
    <div class="col">
        <div class="card text-white bg-dark mb-3">
            <div class="card-body" >
                <h5 class="card-title">{{city}}</h5>
            </div>
        </div>
    </div>
    {{#each weather.[1]}} <!-- access only the current weather -->
        <div class="col">
            <div class="card text-white bg-dark mb-3">
                <div class="card-body" >
                    <h5 class="card-title">{{@key}}</h5>
                    <p class="card-text">{{this}}</p>
                </div>
            </div>
        </div>
    {{/each}}



</div>