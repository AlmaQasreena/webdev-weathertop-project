<div class="row">
    <div class="col">
        <div class="card text-white bg-dark mb-3 d-flex flex-column " style="height: 85%">
            <div class="card-body" >
                <h5 class="card-title">{{city}}</h5>
                <p class="card-text">Lat: {{latitude}} <br>
                    Lon: {{longitude}}</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-white bg-dark mb-3  d-flex flex-column"  style="height: 85%">
            <div class="card-body" >
                <h5 class="card-title">Wetter
                    {{{readings.[0].icon}}}
                </h5>
                <p class="card-text">{{readings.[0].description}}</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-white bg-dark mb-3  d-flex flex-column"  style="height: 85%">
            <div class="card-body" >
                <h5 class="card-title">Temperatur
                    <svg xmlns="http://www.w3.org/2000/svg" width="34" height="34" fill="grey" class="bi bi-thermometer-half" viewBox="0 0 16 16" style="position: absolute; top: 20px; right: 20px;">
                        <path d="M9.5 12.5a1.5 1.5 0 1 1-2-1.415V6.5a.5.5 0 0 1 1 0v4.585a1.5 1.5 0 0 1 1 1.415"/>
                        <path d="M5.5 2.5a2.5 2.5 0 0 1 5 0v7.55a3.5 3.5 0 1 1-5 0zM8 1a1.5 1.5 0 0 0-1.5 1.5v7.987l-.167.15a2.5 2.5 0 1 0 3.333 0l-.166-.15V2.5A1.5 1.5 0 0 0 8 1"/>
                    </svg>
                    {{{readingSummary.[0].trend}}}
                </h5>
                <p class="card-text">{{readings.[0].temperatur}} Grad<br>
                 Max: {{readingSummary.[0].maxReading}}<br>
                 Min: {{readingSummary.[0].minReading}}</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-white bg-dark mb-3  d-flex flex-column"  style="height: 85%">
            <div class="card-body" >
                <h5 class="card-title">Wind
                    <svg xmlns="http://www.w3.org/2000/svg" width="34" height="34" fill="orange" class="bi bi-wind" viewBox="0 0 16 16" style="position: absolute; top: 20px; right: 20px;">
                        <path d="M12.5 2A2.5 2.5 0 0 0 10 4.5a.5.5 0 0 1-1 0A3.5 3.5 0 1 1 12.5 8H.5a.5.5 0 0 1 0-1h12a2.5 2.5 0 0 0 0-5m-7 1a1 1 0 0 0-1 1 .5.5 0 0 1-1 0 2 2 0 1 1 2 2h-5a.5.5 0 0 1 0-1h5a1 1 0 0 0 0-2M0 9.5A.5.5 0 0 1 .5 9h10.042a3 3 0 1 1-3 3 .5.5 0 0 1 1 0 2 2 0 1 0 2-2H.5a.5.5 0 0 1-.5-.5"/>
                    </svg>
                    {{{readingSummary.[1].trend}}}
                </h5>
                <p class="card-text">{{readings.[0].wind}} bft<br>
                    {{readings.[0].direction}} <br>
                    Max: {{readingSummary.[1].maxReading}}<br>
                    Min: {{readingSummary.[1].minReading}}</p>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card text-white bg-dark mb-3  d-flex flex-column"  style="height: 85%">
            <div class="card-body" >
                <h5 class="card-title">Luftdruck
                    <svg xmlns="http://www.w3.org/2000/svg" width="34" height="34" fill="yellow" class="bi bi-speedometer" viewBox="0 0 16 16" style="position: absolute; top: 20px; right: 20px;">
                        <path d="M8 2a.5.5 0 0 1 .5.5V4a.5.5 0 0 1-1 0V2.5A.5.5 0 0 1 8 2M3.732 3.732a.5.5 0 0 1 .707 0l.915.914a.5.5 0 1 1-.708.708l-.914-.915a.5.5 0 0 1 0-.707M2 8a.5.5 0 0 1 .5-.5h1.586a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 8m9.5 0a.5.5 0 0 1 .5-.5h1.5a.5.5 0 0 1 0 1H12a.5.5 0 0 1-.5-.5m.754-4.246a.39.39 0 0 0-.527-.02L7.547 7.31A.91.91 0 1 0 8.85 8.569l3.434-4.297a.39.39 0 0 0-.029-.518z"/>
                        <path fill-rule="evenodd" d="M6.664 15.889A8 8 0 1 1 9.336.11a8 8 0 0 1-2.672 15.78zm-4.665-4.283A11.95 11.95 0 0 1 8 10c2.186 0 4.236.585 6.001 1.606a7 7 0 1 0-12.002 0"/>
                    </svg>
                    {{{readingSummary.[2].trend}}}
                </h5>
                <p class="card-text">{{readings.[0].luftdruck}} hpa<br>
                    Max: {{readingSummary.[2].maxReading}}<br>
                    Min: {{readingSummary.[2].minReading}}</p>
            </div>
        </div>
    </div>
</div>
